<h1>Check out these awesome places to eat!</h1>

<p> Stuff and things! </p>

<% @restaurants.each do |res| %>
  <div>
    <h2><%= link_to res.name, restaurant_path(res) %></h2>
    <p><strong>Category:</strong> <%= res.category %></p>
    <p><strong>Address:</strong> <%= res.address %></p>
    <p><strong>Phone Number:</strong><%= res.phone %></p>
    <p><strong>Rating:</strong> <%= res.average_rating %></p>

  </div>
  <hr>
  <% end %>
